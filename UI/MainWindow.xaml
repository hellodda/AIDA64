<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" VerticalAlignment="Top" Height="50" Padding="25">
            <TextBlock Text="Cpu" FontSize="25"/>
        </Border>

        <StackPanel Grid.Row="1" Spacing="20" Padding="25">

          
                <StackPanel Orientation="Vertical" Spacing="3" VerticalAlignment="Center">

                    <Border Background="{ThemeResource  ControlFillColorDefaultBrush}" CornerRadius="5 5 0 0" Height="60" Padding="15">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Spacing="5">
                            <FontIcon Glyph="&#xE950;"  FontSize="20"/>
                            <TextBlock Text="intel core i7 12000H" FontSize="20"/>
                        </StackPanel>
                    </Border>

                <Border  Background="{ThemeResource  ControlFillColorDefaultBrush}" Height="250" Padding="15">


                    <StackPanel Orientation="Vertical" Spacing="20">
                        <TextBlock Text="About CPU" FontSize="20"/>
                        <StackPanel Spacing="15" Orientation="Horizontal">

                            
                            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="10">
                                <TextBlock Text="Address Width:"/>
                                <TextBlock Text="Processor Name:"/>
                                <TextBlock Text="Manufacturer:"/>
                                <TextBlock Text="Physical Cores:"/>
                                <TextBlock Text="Logical Processors:"/>
                                <TextBlock Text="Max Clock Speed:"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="10">
                                <TextBlock Text="64"/>
                                <TextBlock Text="Intel(R) Core(TM) i7-9700K"/>
                                <TextBlock Text="GenuineIntel"/>
                                <TextBlock Text="8"/>
                                <TextBlock Text="8"/>
                                <TextBlock Text="4900 MHz"/>
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border  Background="{ThemeResource  ControlFillColorDefaultBrush}" CornerRadius="0 0 5 5" Height="60" Padding="15">
                    
                </Border>
                    
                </StackPanel>
           

        </StackPanel>
    </Grid>
</Window>
